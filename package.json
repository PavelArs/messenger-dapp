{
  "name": "messenger-dapp",
  "version": "0.1.0",
  "type": "commonjs",
  "scripts": {
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "build": "npm run clean && npm run compile",
    "test": "hardhat test",
    "coverage": "SOLIDITY_COVERAGE=true hardhat coverage",
    "typecheck": "tsc --noEmit",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat ignition deploy ignition/modules/Messenger.ts --network sepolia",
    "lint": "npm run prettier -- --check && npm run eslint",
    "lint:fix": "npm run prettier -- --write && npm run eslint -- --fix",
    "eslint": "eslint \"ignition/**/*.{js,jsx,ts,tsx}\" \"test/**/*.{js,jsx,ts,tsx}\"",
    "prettier": "prettier \"*.{js,ts,md,json}\" \"ignition/modules/*.{js,ts,md,json}\" \"test/*.{js,ts,md,json}\" \"contracts/**/*.sol\""
  },
  "keywords": [
    "Web3",
    "DApp",
    "Next.js",
    "Wagmi",
    "Viem",
    "RainbowKit",
    "Hardhat",
    "Solidity"
  ],
  "author": "Pavel Ars",
  "license": "MIT",
  "description": "A decentralized messaging application built with Next.js, Wagmi, Viem, RainbowKit, Hardhat and Solidity.",
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.10",
    "@nomicfoundation/hardhat-ignition-viem": "^0.15.10",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox-viem": "3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@nomicfoundation/hardhat-viem": "2.0.6",
    "@nomicfoundation/ignition-core": "^0.15.10",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.10",
    "chai": "4.5.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-prettier": "^5.2.3",
    "hardhat": "^2.22.19",
    "hardhat-gas-reporter": "^1.0.10",
    "prettier": "^3.5.3",
    "prettier-plugin-solidity": "^1.4.2",
    "solidity-coverage": "^0.8.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "viem": "2.23.9"
  }
}
