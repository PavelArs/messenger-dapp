{
  "name": "messenger-dapp",
  "version": "1.0.0",
  "type": "commonjs",
  "scripts": {
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "build": "npm run clean && npm run compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "postcompile": "typechain --target ethers-v6",
    "typecheck": "tsc --noEmit",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat ignition deploy ignition/modules/Messenger.ts --network sepolia"
  },
  "keywords": [
    "Web3",
    "Next.js",
    "Wagmi",
    "RainbowKit",
    "Hardhat",
    "Solidity"
  ],
  "author": "Pavel Ars",
  "license": "MIT",
  "description": "A decentralized messaging application built with Next.js, Wagmi, RainbowKit, Hardhat and Solidity.",
  "devDependencies": {
    "@ethersproject/abi": "^5.8.0",
    "@ethersproject/providers": "^5.8.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "chai": "^4.5.0",
    "ethers": "^6.13.5",
    "hardhat": "^2.22.19",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.14",
    "typechain": "^8.3.2"
  }
}
